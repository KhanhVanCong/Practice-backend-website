<body>
    <div class="ch-container">
        <div class="row">

            <div class="row">
                <div class="col-md-12 center login-header">
                    <h2>Trang quản trị HT Legal</h2>
                </div>
                <!--/span-->
            </div>
            <!--/row-->

            <div class="row">
                <div class="well col-md-5 center login-box">
                    <div class="alert alert-info">
                        Đăng nhập bằng email và password của bạn
           
                    </div>
                    <form action="/admin/home/Login/" method="post">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                <input name="email" type="text" class="form-control" placeholder="Email">
                            </div>
                            <div class="clearfix"></div>
                            <br>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                <input name="password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend">
                                <a href="#" id="forgotPass">Forgot your password?</a>
                            </div>
                            <div class="clearfix"></div>

                            <p class="center col-md-5">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </p>

                            @if (TempData["login_err"] != null)
                            {
                                <div class="alert alert-danger">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    <strong>Đăng nhập thất bại!</strong>
                                </div>
                            }


                        </fieldset>
                    </form>
                </div>
                <!--/span-->
            </div>
            <!--/row-->
        </div>
        <!--/fluid-row-->

    </div>
    <!--/.fluid-container-->

    <!-- external javascript -->

   



    <!-- forgot your password -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="Quên mật khẩu" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3>Quên mật khẩu?</h3>
                </div>
                <div class="modal-body">
                    <p>Hãy nhập email, chúng tôi sẽ gửi mật khẩu đến email của bạn</p>
                    <p>
                        <input type="email" id="fgpass_email" style="width: 400px" class="form-control" />

                        &nbsp;<img src="~/Content/admin/img/ajax-loaders/ajax-loader-1.gif" id="forgetLoading" style="display: none" />

                    </p>
                    <p id="msg_sucs" class="alert alert-success" style="display: none">
                        <strong>Thành công: </strong>Hãy kiểm tra hộp mail của bạn
                    </p>
                    <p id="msg_err" class="alert alert-danger" style="display: none">
                        <strong>Thất bại: </strong><span id="err_msg"></span>
                    </p>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
                    <a href="#" id="forgotPassSubmit" class="btn btn-primary">Submit</a>
                </div>

            </div>
        </div>
    </div>



    <script type="text/javascript">
        $('#forgotPass').click(function (e) {
            e.preventDefault();
            $("#fgpass_email").val('');
            $("#msg_sucs").hide();
            $("#msg_err").hide();
            $('#myModal').modal('show');
        });

        $("#forgotPassSubmit").click(function (e) {

            if ($("#fgpass_email").val() == "") {
                alert("Nhập email của bạn");
            }
            else {
                $("#forgetLoading").show();
                var obj = {};
                obj.url = "/admin/home/ForgotPassword/";
                obj.type = "post";
                obj.dataType = "json";
                obj.contentType = "application/json";
                obj.data = JSON.stringify({email: $("#fgpass_email").val() });
                obj.success = function (data) {
                    if (data[0] == true) {
                        $("#msg_sucs").show();
                        $("#msg_err").hide();
                    }
                    else {
                        $("#msg_err").show();
                        $("#err_msg").html(data[1]);
                        $("#msg_sucs").hide();
                    }
                }
                obj.error = function () { $("#forgetLoading").hide(); };
                obj.complete = function () { $("#forgetLoading").hide(); };
                $.ajax(obj);
            }


        });
    </script>

