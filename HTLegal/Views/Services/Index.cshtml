@using HTLegal.Models
@model IEnumerable<E_Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HTLegalContext db = new HTLegalContext();
    var services = db.E_CMS_Services.FirstOrDefault();
}

<!--Start Breadcrumb Text area-->
<section class="breadcrumb-area" style="background: rgba(0, 0, 0, 0) url('/Content/HTLegal/img/@services.Logo_1920x400') no-repeat; background-position: center; background-size:cover; position: relative;">
    <div class="breadcrumb-text-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb-text text-center">
                        <h1>Dịch Vụ</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Breadcrumb Text area-->
<!--Start we have best attorney Area title -->
<section id="we-have-best-attorney-area-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="best-attorney">
                    <div class="section-title text-center">
                        <span>@services.SubTitle</span>
                        <h2><span>@services.Title</span></h2>
                        <p>@services.Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End we have best attorney Area title -->
<!--Start practice v2 area css-->
<section id="practice-v2-area">
    <div class="container">
        <div class="row">
            <div class="practice-v2 text-center">
                @foreach (var item in Model)
                {
                <!--Start practice v2 single item-->
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="practice-v2-single-item">
                            <img src="~/Content/HTLegal/img/practice/@item.Image_374x219" alt="">
                            <div class="practice-v2-single-item-title">
                                <h4><span>@item.Title</span></h4>
                            </div>
                            <div class="practice-v2-single-item-text">
                                <p>@item.Description</p>
                                <a href="/services/detail/@item.Id" target="_blank">View Details</a>
                            </div>
                        </div>
                    </div>
                <!--End practice v2 single item-->
                }
            </div>
        </div>
    </div>
</section>
<!--End practice v2 area css-->
