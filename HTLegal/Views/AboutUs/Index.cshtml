@using HTLegal.Models
@model IEnumerable<E_CMS_AboutUs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HTLegalContext db = new HTLegalContext();
    var aboutUs = Model.FirstOrDefault();
    var homeContent = db.E_Home_Content.FirstOrDefault();
    var attorney = db.E_Attorneys.Where(a => a.IsActiceHome == true).ToList();
}


<!--Start Breadcrumb Text area-->
<section class="breadcrumb-area" style="background: rgba(0, 0, 0, 0) url('/Content/HTLegal/img/@aboutUs.Logo_1920x400') no-repeat; background-position: center; background-size:cover; position: relative;">
    <div class="breadcrumb-text-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb-text text-center">
                        <h1>about us</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Breadcrumb Text area-->  

<!--Start Mission and vision area-->
<section id="mission-vision-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="mission-vision-left-img">
                    <img src="~/Content/HTLegal/img/@aboutUs.Picture_Left" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="mission-vision-text">
                    <div class="section-title">
                        <span>@aboutUs.SubTitle</span>
                        <h2><span>@aboutUs.Title</span></h2>
                    </div>
                    <p>@aboutUs.Introduce</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="mission-vision-right-img">
                    <img src="~/Content/HTLegal/img/@aboutUs.Picture_Right" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Mission and vision area-->

<!--Start Featured Services area-->
  @Html.Partial("~/Views/Shared/_ServicesPartial.cshtml")
<!--End Featured Services area-->

<!--Start Our Attorneys Area-->
<section id="our-attorneys-area" class="anim-5-all home">
    <div class="container">
        <div class="row">
            <div class="our-attorneys">
                <div class="section-title text-center">
                    <h2><span>@homeContent.Title_Attorney_Area</span></h2>
                </div>
                <!--Start Single Attorney-->
                @foreach (var item in attorney)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="single-attorney">
                            <div class="attorney-image-holder">
                                <img src="~/Content/HTLegal/img/attorneys/@item.Picture_270x288" alt="">
                                <div class="attorney-overlay">
                                    <div class="phone-and-mail">
                                        <p>Phone: @item.E_Users.CellPhone</p>
                                        <p>E-mail: @item.E_Users.Email</p>
                                    </div>
                                    <div class="attorney-ninus-icon">
                                        <img src="~/Content/HTLegal/img/attorney-ninus-icon.png" alt="">
                                    </div>
                                </div>
                                <div class="attorney-plus-icon">
                                    <img src="~/Content/HTLegal/img/attorney-plus-icon-golden.png" alt="">
                                </div>
                            </div>
                            <div class="attorney-name text-center">
                                <h5>@item.FullName</h5>
                                <p>@item.Position</p>
                            </div>
                        </div>
                    </div>
                }
                <!--End Single Attorney-->
            </div>
        </div>
    </div>
</section>
<!--End Our Attorneys Area-->

<!--Start Testimonial Area-->
<section id="testimonial-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="testimonial-list">
                    <div id="testimonial-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <!--Start Testimonial Single Item-->
                            <div class="item active">
                                <div class="single-testimonial-item text-center">
                                    <div class="testimonial-image-holder">
                                        <img src="~/Content/HTLegal/img/testimonial/testimonial-2.png" alt="">
                                    </div>
                                    <p>“We believe that analysis of your company and your customers is key in responding effectively to your promotional needs and we will work with you to fully understand your business to achieve the greatest amount of publicity possible so that you can see a return from the advertising.11”</p>

                                    <div class="testimonial-author">
                                        <h4>- Michale John</h4>
                                    </div>
                                </div>
                            </div>
                            <!--End Testimonial Single Item-->
                            <a class="left testimonial-control" href="#testimonial-carousel" role="button" data-slide="prev"><i class="fa fa-long-arrow-left testimonial-ctl-button"></i></a>
                            <a class="right testimonial-control" href="#testimonial-carousel" role="button" data-slide="next"><i class="fa fa-long-arrow-right testimonial-ctl-button"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Testimonial Area-->
