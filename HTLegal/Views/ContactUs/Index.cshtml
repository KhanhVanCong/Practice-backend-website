@using HTLegal.Models
@model E_CMS_ConTactUs

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!--Start Breadcrumb Text area-->
<section class="breadcrumb-area" style="background: rgba(0, 0, 0, 0) url('/Content/HTLegal/img/@Model.Logo_1920x400') no-repeat; background-position: center; background-size:cover; position: relative;">
    <div class="breadcrumb-text-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb-text text-center">
                        <h1>Liên Hệ</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Breadcrumb Text area--> 

<!--Start contact area-->
<section id="contact-area" class="anim-5-all">
    <div class="container">
        <div class="row">
            <div class="contact">
                <div class="section-title text-center">
                    <span>@Model.SubTitle</span>
                    <h2><span>@Model.Title</span></h2>
                    <p>@Model.Content</p>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="contact-form">
                            <form action="/contactus/submit" method="post" role="form" target="_blank" class="thm-contact-form">
                                @Html.HiddenFor(m => m.Email)
                                <input name="name" type="text" placeholder="Họ Tên " >
                                <input name="emailclient" type="text" placeholder="Email ">
                                <input name="phone" type="text" placeholder="Số Điện Thoại ">
                                <textarea name="message" placeholder="Tin Nhắn"></textarea>
                                <button type="submit">Submit Now <i class="fa fa-arrow-right"></i></button>
                            </form>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="contact-right text-center">
                        <div class="contact-right-img">
                            <img src="~/Content/HTLegal/img/@Model.Picture_141x141" alt="" width="141" height="141">
                        </div>
                        <div class="contact-right-text">
                            <h3>@Model.FullName</h3>
                            <h5>@Model.Position</h5>
                            <p>Phone : @Model.Phone</p>
                            <p>Email : @Model.Email</p>
                        </div>
                        <div class="contact-right-social-link">
                            <a href="@Model.Facebook" target="_blank"><i class="fa fa-facebook mysocial_style"></i></a>
                            <a href="@Model.Twifter" target="_blank"><i class="fa fa-twitter mysocial_style"></i></a>
                            <a href="@Model.Google" target="_blank"><i class="fa fa-google-plus mysocial_style"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End contact area--> 

<!--start map area-->
<iframe src="@Model.Map" width="100%" height="40%"></iframe>
<!--End map area-->
