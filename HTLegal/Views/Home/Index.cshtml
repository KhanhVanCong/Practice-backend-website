            var phone = $.trim($('#phone').val());
            if (email === "" && phone === "") {
                alert('Quý khách vui lòng nhập email hoặc số điện thoại !');
                return false;
            }
            else {
                if ($.isNumeric(phone) == false && email === "") {
                    alert('Quý Khách vui lòng nhập lại số điện thoại !');
                    return false;
                }
            }

        });


    </script>
}
