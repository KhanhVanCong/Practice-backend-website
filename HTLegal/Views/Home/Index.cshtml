    <div class="container">
        <div class="row">
            <div class="our-attorneys">
                <div class="section-title text-center">
                    <h2><span>@homeContent.Title_Attorney_Area</span></h2>
                </div>
                <!--Start Single Attorney-->
                @foreach (var item in attorney)
