<!--Start latest news area-->
<section id="latest-news-area" class="anim-5-all">
    <div class="container">
        <div class="row">
            <div class="latest-news">
                <div class="section-title text-center">
                    <h2><span>@homeContent.Title_Blog_Area</span></h2>
                </div>
                @if (blog.Count <= 3)
                {
                    foreach (var item in blog)
                {
                    <!--Start Single news item-->
                        var count = db.E_Blog_Reply.Where(r => r.IsActive == true && r.BlogId == item.Id).Count();
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="single-news-item">
                                <div class="news-image-holder">
                                    <img src="~/Content/HTLegal/img/blog/@item.Picture_810x305" alt="">
                                    <div class="overlay">
                                        <a href="#"><i class="fa fa-link"></i></a>
                                    </div>
                                    <div class="published-date-wrapper">
                                        <div class="published-date">
                                            <h3>@item.CreatedAt.Value.ToString("dd")</h3>
                                            <p>@item.CreatedAt.Value.ToString("MMM")</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="latest-news-text">
                                    <ul class="meta text-center">
                                        <li><a href="#"><i class="fa fa-user"></i> By: @item.CreatedBy</a></li>
                                        <li><a href="#"><i class="fa fa-comments"></i> Comments: @count</a></li>
                                    </ul>
                                    <h4>@item.Title</h4>
                                    <p>@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {

                    for (var i = 0; i < 3; i++)
                    {
                        int? id = blog[i].Id;
                        var count = db.E_Blog_Reply.Where(r => r.IsActive == true && r.BlogId == id).Count();
                     <!--Start Single news item-->
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="single-news-item">
                                <div class="news-image-holder">
                                    <img src="~/Content/HTLegal/img/blog/@blog[i].Picture_810x305" alt="">
                                    <div class="overlay">
                                        <a href="/blog/detail/@blog[i].Id"><i class="fa fa-link"></i></a>
                                    </div>
                                    <div class="published-date-wrapper">
                                        <div class="published-date">
                                            <h3>@blog[i].CreatedAt.Value.ToString("dd")</h3>
                                            <p>@blog[i].CreatedAt.Value.ToString("MMM")</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="latest-news-text">
                                    <ul class="meta text-center">
                                        <li><a href="#"><i class="fa fa-user"></i> By: @blog[i].CreatedBy</a></li>
                                        <li><a href="#"><i class="fa fa-comments"></i> Comments: @count</a></li>
                                    </ul>
                                    <h4>@blog[i].Title</h4>
                                    <p>@blog[i].Description</p>
                                </div>
                            </div>
                        </div>
                    }

                }
                <!--End Single news item-->
            </div>
        </div>
    </div>
</section>
<!--End latest news area-->
