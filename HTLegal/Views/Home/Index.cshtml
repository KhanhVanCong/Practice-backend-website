@using HTLegal.Models
@model IEnumerable<object>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<E_Home_Content> homeInfo = Model.ToList()[0] as List<E_Home_Content>;
    var homeContent = homeInfo.FirstOrDefault();
    List<E_Home_Slide> homeSlide = Model.ToList()[1] as List<E_Home_Slide>;
    List<E_Services> services = Model.ToList()[2] as List<E_Services>;
    List<E_Feature_Services> featureServices = Model.ToList()[3] as List<E_Feature_Services>;
    //List<E_Client> client = Model.ToList()[4] as List<E_Client>;
    List<E_Attorneys> attorney = Model.ToList()[4] as List<E_Attorneys>;
    List<E_Blog> blog = Model.ToList()[5] as List<E_Blog>;
    List<E_Home_FeedbackClient> feedback = Model.ToList()[6] as List<E_Home_FeedbackClient>;
    HTLegalContext db = new HTLegalContext();

}

